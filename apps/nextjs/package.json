{
  "name": "@oppfy/nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@oppfy/api": "workspace:*",
    "@oppfy/db": "workspace:*",
    "@oppfy/env": "workspace:*",
    "@t3-oss/env-nextjs": "^0.6.1",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.2",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "next": "^13.5.6",
    "nextjs-cors": "^2.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "2.2.0",
    "swagger-ui-react": "^5.17.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@oppfy/eslint-config": "workspace:*",
    "@oppfy/prettier-config": "workspace:*",
    "@oppfy/tsconfig": "workspace:*",
    "@oppfy/tailwind-config": "workspace:*",
    "@types/node": "^18.19.31",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.3.0",
    "@types/swagger-ui-react": "^4.18.3",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^7.4.1",
    "postcss": "^8.4.38",
    "tailwindcss": "3.3.5",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4"
  },
  "prettier": "@oppfy/prettier-config"
}

{
  "extends": ["@oppfy/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    },
    "module": "ES2020",
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["nativewind/types"],
    "checkJs": false
  },
  "include": [
    "index.tsx",
    "src",
    "*.ts",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./metro-require.d.ts"
  ],
  "exclude": ["node_modules"]
}

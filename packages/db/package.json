{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "dev": "pnpm with-env tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "push": "pnpm with-env drizzle-kit push",
    "generate": "pnpm with-env drizzle-kit generate:mysql",
    "migrate": "pnpm tsx src/migrate.ts",
    "studio": "pnpm with-env drizzle-kit studio --config drizzle.config.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@aws-sdk/client-rds-data": "^3.564.0",
    "@aws-sdk/client-s3": "^3.564.0",
    "@aws-sdk/credential-providers": "^3.564.0",
    "@mux/mux-node": "^8.5.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "drizzle-orm": "^0.30.10",
    "eslint-plugin-drizzle": "^0.2.3",
    "mysql2": "^3.9.7"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:^",
    "@acme/prettier-config": "workspace:^",
    "@acme/tsconfig": "workspace:^",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.21.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@acme/eslint-config/base"
    ]
  },
  "prettier": "@acme/prettier-config"
}

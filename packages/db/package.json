{
  "name": "@oppfy/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./index.ts"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "pnpm generate && pnpm migrate",
    "generate": "pnpm with-env drizzle-kit generate",
    "migrate": "pnpm with-env tsx ./migrate.ts",
    "wipe": "pnpm with-env tsx ./wipe.ts",
    "studio": "pnpm with-env drizzle-kit studio --config drizzle.config.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@oppfy/env": "workspace:*",
    "@aws-sdk/client-rds-data": "^3.564.0",
    "@aws-sdk/credential-providers": "^3.564.0",
    "postgres": "^3.4.4",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@oppfy/eslint-config": "workspace:*",
    "@oppfy/prettier-config": "workspace:*",
    "@oppfy/tsconfig": "workspace:*",
    "drizzle-kit": "^0.21.1",
    "eslint": "^9.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4"
  },
  "prettier": "@oppfy/prettier-config"
}

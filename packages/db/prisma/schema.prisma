generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    relationMode = "prisma"
    url          = env("DATABASE_URL")
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime
    createdAt  DateTime @default(now())

    @@unique([identifier, token])
}

model User {
    id                  String               @id
    firstName           String?
    dateOfBirth         DateTime?
    image               String?
    bio                 String?
    profilePhoto        ProfilePhoto?
    postsOfOthers       Post[]               @relation("postsOfOthers")
    tags                Tag[]
    likedPosts          Like[]
    comments            Comment[]
    notificationSetting NotificationSetting?
    createdAt           DateTime             @default(now())
    updatedAt           DateTime             @updatedAt
}

model ProfilePhoto {
    id          String   @id @default(cuid())
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String   @unique
    media       Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
    mediaId     String   @unique
    lastUpdated DateTime
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@index([userId])
    @@index([mediaId])
}

model Post {
    id         String     @id @default(cuid())
    datePosted DateTime   @default(now())
    author     User       @relation(fields: [authorId], references: [id], name: "postsOfOthers", onDelete: Cascade)
    authorId   String
    tags       Tag[]
    media      Media      @relation(fields: [mediaId], references: [id], onDelete: Cascade)
    mediaId    String     @unique
    caption    String?
    postStats  PostStats?
    comments   Comment[]
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
    Like       Like[]

    @@index([authorId])
    @@index([mediaId])
}

model Tag {
    id        String   @id @default(cuid())
    post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([postId, userId]) // Composite index for postId and userId
    @@index([userId])
}

model Media {
    id           String        @id @default(cuid())
    type         MediaTypes
    objectKey    String        @unique
    lastUpdated  DateTime?
    profilePhoto ProfilePhoto?
    post         Post?
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt
}

enum MediaTypes {
    PHOTO
    VIDEO
}

model PostStats {
    id        String   @id @default(cuid())
    likeCount Int
    views     Int
    post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId    String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([postId])
}

model Like {
    id        String   @id @default(cuid())
    likedBy   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String
    post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([postId])
    @@index([userId])
}

model Comment {
    id        String   @id @default(cuid())
    author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
    authorId  String
    post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId    String
    comment   String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([authorId])
    @@index([postId])
}

model NotificationSetting {
    id             String   @id @default(cuid())
    user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId         String   @unique
    posts          Boolean  @default(true)
    mentions       Boolean  @default(true)
    comments       Boolean  @default(true)
    friendRequests Boolean  @default(true)
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@index([userId])
}

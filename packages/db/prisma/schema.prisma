generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    relationMode = "prisma"
    url          = env("DATABASE_URL")
}

model User {
    id           String        @id @unique // Firebase UID
    firstName    String?
    dateOfBirth  String?
    image        String?
    bio          String?
    profilePhoto ProfilePhoto?
    createdPosts Post[]        @relation("createdPosts")
    postsOf      Post[]        @relation("postsOf")
    likedPosts   Like[]
    comments     Comment[]
}

model ProfilePhoto {
    id         String    @id @default(cuid())
    user       User      @relation(fields: [userId], references: [id])
    userId     String    @unique
    media      Media     @relation(fields: [mediaId], references: [id])
    mediaId    String    @unique
    dateEdited DateTime?
}

model Post {
    id         String   @id @default(cuid())
    datePosted DateTime

    author     User   @relation(fields: [authorId], references: [id], name: "createdPosts")
    authorId   String
    postedOf   User   @relation(fields: [postedOfId], references: [id], name: "postsOf")
    postedOfId String

    caption   String
    postStats PostStats?
    comments  Comment[]
    media     Media[]

    @@index([authorId])
    @@index([postedOfId])
}

model PostStats {
    id     String @id @default(cuid())
    likes  Like[]
    views  Int
    post   Post   @relation(fields: [postId], references: [id])
    postId String @unique
}

model Like {
    id          String    @id @default(cuid())
    likedBy     User      @relation(fields: [userId], references: [id])
    userId      String
    postStats   PostStats @relation(fields: [postStatsId], references: [id])
    postStatsId String    @unique

    @@index([userId])
}

model Comment {
    id         String    @id @default(cuid())
    author     User      @relation(fields: [authorId], references: [id])
    authorId   String
    post       Post      @relation(fields: [postId], references: [id])
    postId     String
    comment    String
    datePosted DateTime?

    @@index([authorId])
    @@index([postId])
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Media {
    id           String        @id @default(cuid())
    post         Post          @relation(fields: [postId], references: [id])
    postId       String
    type         MediaTypes
    objectKey    String
    thumbnailUrl String
    profilePhoto ProfilePhoto?
    timestamp    DateTime?

    @@index([postId])
}

enum MediaTypes {
    PHOTO
    VIDEO
}

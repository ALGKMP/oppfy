// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// NextAuth.js Models
// NOTE: When using postgresql, mysql or sqlserver, 
// uncomment the @db.Text annotations below
// @see https://next-auth.js.org/schemas/models


model User {
    id String @id @unique

    firstName   String?
    dateOfBirth String? //! string for testing purposes
    image String?
    createdPosts Post[] @relation("createdPosts")
    postsOf      Post[]       @relation("postsOf")
    profilePhoto ProfilePhoto?
}

// TODO: UserDetails

model ProfilePhoto {
    id         String    @id @default(cuid())
    user       User      @relation(fields: [userId], references: [id])
    userId     String    @unique
    s3Key      String
    dateEdited DateTime?
}

model Post {
    id         String    @id @default(cuid())
    author     User      @relation(fields: [authorId], references: [id], "createdPosts")
    authorId   String
    postedOf   User      @relation(fields: [postedOfId], references: [id], "postsOf")
    postedOfId String
    // comments Comment[]
    caption    String
    // postStats PostStats

    // TODO this 
    // media      Media    @relation(fields: [mediaId], references: [id])
    mediaId    String
    datePosted DateTime?
}
model PostStats{
    id String @id @default(cuid())
    // likes Like[] 
    views Int
}

model Like {
    id String @id @default(cuid())
    // TODO liker
    // TODO likee

}

model Comment {
    id String @id @default(cuid())
    // author User @relation(fields: [authorId], references: [id])
    // authorId String
    // post Post @relation(fields: [postId], references: [id])
    // postId String
    comment String
    datePosted DateTime?

}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Media {
    id String @id @default(cuid())
    type MediaTypes
    url String
    thumbnailUrl String
    timestamp DateTime?
}

enum MediaTypes {
  USER
  ADMIN
}
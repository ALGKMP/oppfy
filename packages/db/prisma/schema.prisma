generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    relationMode = "prisma"
    url          = env("DATABASE_URL")
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model User {
    id                  String               @id @unique // Firebase UID
    firstName           String?
    dateOfBirth         String?
    image               String?
    bio                 String?
    profilePhoto        ProfilePhoto?
    postsOfOthers       Post[]               @relation("postsOfOthers")
    tags                Tag[]
    likedPosts          Like[]
    comments            Comment[]
    notificationSetting NotificationSetting?
}

model ProfilePhoto {
    id          String   @id @default(cuid())
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String   @unique
    media       Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
    mediaId     String   @unique
    lastUpdated DateTime
}

model Post {
    id         String     @id @default(cuid())
    datePosted DateTime
    author     User       @relation(fields: [authorId], references: [id], name: "postsOfOthers", onDelete: Cascade)
    authorId   String
    tags       Tag[]
    media      Media      @relation(fields: [mediaId], references: [id], onDelete: Cascade)
    mediaId    String     @unique
    caption    String?
    postStats  PostStats?
    comments   Comment[]

    @@index([authorId])
    @@index([mediaId])
}

model Tag {
    post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId String @unique
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId String @unique

    @@id([postId, userId])
}

model Media {
    id           String        @id @default(cuid())
    type         MediaTypes
    objectKey    String
    thumbnailUrl String
    lastUpdated  DateTime?
    ProfilePhoto ProfilePhoto?
    Post         Post?
}

enum MediaTypes {
    PHOTO
    VIDEO
}

model PostStats {
    id     String @id @default(cuid())
    likes  Like[]
    views  Int
    post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId String @unique

    @@index([postId])
}

model Like {
    id          String    @id @default(cuid())
    likedBy     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String
    postStats   PostStats @relation(fields: [postStatsId], references: [id], onDelete: Cascade)
    postStatsId String    @unique

    @@index([userId])
}

model Comment {
    id         String    @id @default(cuid())
    author     User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
    authorId   String
    post       Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
    postId     String
    comment    String
    datePosted DateTime?

    @@index([authorId])
    @@index([postId])
}

model NotificationSetting {
    id             String  @id @default(cuid())
    userId         String  @unique
    user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    posts          Boolean @default(true)
    mentions       Boolean @default(true)
    comments       Boolean @default(true)
    friendRequests Boolean @default(true)

    @@index([userId])
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// NextAuth.js Models
// NOTE: When using postgresql, mysql or sqlserver, 
// uncomment the @db.Text annotations below
// @see https://next-auth.js.org/schemas/models

model User {
    id String @id @unique

    email       String    @unique
    name        String?
    image       String?
    gender      Gender?
    dateOfBirth DateTime?

    createdPosts Posts[]       @relation("createdPosts")
    postsOf      Posts[]       @relation("postsOf")
    profilePhoto ProfilePhoto? 
}

model ProfilePhoto {
    id         String   @id @default(cuid())
    user       User     @relation(fields: [userId], references: [id])
    userId     String   @unique
    s3Key      String
    dateEdited DateTime?
}

model Posts {
    id         String   @id @default(cuid())
    author     User     @relation(fields: [authorId], references: [id], "createdPosts")
    authorId   String
    postedOf   User     @relation(fields: [postedOfId], references: [id], "postsOf")
    postedOfId String
    caption    String
    s3Key      String
    datePosted DateTime?
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

enum Gender {
    MALE
    FEMALE
    OTHER
    PREFER_NOT_TO_SAY
}

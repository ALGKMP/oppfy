{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"]
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalEnv": [
    "PORT",
    "AWS_REGION",
    "AWS_ACCOUNT_ID",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "SNS_PUSH_NOTIFICATION_TOPIC_ARN",
    "SQS_CONTACT_QUEUE",
    "S3_POST_BUCKET",
    "S3_PROFILE_BUCKET",
    "MUX_TOKEN_ID",
    "MUX_TOKEN_SECRET",
    "MUX_WEBHOOK_SECRET",
    "DATABASE_PORT",
    "DATABASE_ENDPOINT",
    "DATABASE_USERNAME",
    "DATABASE_NAME",
    "DATABASE_PASSWORD",
    "DATABASE_URL",
    "OPENSEARCH_URL",
    "EXPO_ACCESS_TOKEN",
    "EXPO_PUBLIC_API_URL",
    "EXPO_PUBLIC_SENTRY_AUTH_TOKEN",
    "EXPO_PUBLIC_SENTRY_DSN",
    "CONTACT_REC_LAMBDA_URL",
    "CLOUDFRONT_PUBLIC_KEY",
    "CLOUDFRONT_PUBLIC_KEY_ID",
    "CLOUDFRONT_PROFILE_DISTRIBUTION_ID",
    "CLOUDFRONT_PRIVATE_KEY",
    "CLOUDFRONT_PUBLIC_POSTS_DISTRIBUTION_DOMAIN",
    "CLOUDFRONT_PRIVATE_POSTS_DISTRIBUTION_DOMAIN",
    "CLOUDFRONT_PRIVATE_POSTS_DISTRIBUTION_ID",
    "CLOUDFRONT_PROFILE_DISTRIBUTION_DOMAIN"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "npm_lifecycle_event"
  ]}
